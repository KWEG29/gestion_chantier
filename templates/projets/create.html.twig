{% extends "base.html.twig" %}

{% block title %}Commencer un projet{% endblock %}

{% block style %}
    #header
    {
        width : 100% ;
        height : 25vh ;
        background : #0b2b40 ;
        margin-bottom : 5vh ;
        display : flex ;
        justify-content : space-around ;
    }

    #logo
    {
        width : 50% ;
        height : 100% ;
        margin : auto ;
    } 



    #infos
    {
        width : 25% ;
        height : 20vh ;
        margin-top : 2.5vh ;
        display : flex ;
        flex-direction : column ;
        justify-content : space-between ;
        font-size : 1.25em;
        color : white ;
    }

    #infos-h
    {
        text-align : center ;
    }

    #infos span
    {
        font-weight : bolder ;
    }

    #decon
    {
        padding : 5px ;
        background : #185359 ;
        font-size : 0.8em ;
        color : white ;
        border-radius : 5px ;
        cursor : pointer ;
    }

    #btn
    {
        text-align : center ;
    }

    h1
    {
        width : 100% ;
        height : 10vh ;
        text-align :center ;
        font-size : 2.75em ;
        text-transform : uppercase ;
        font-family : sans-serif ;
        color : #444;
        font-weight : bolder ;
    }

    #hr-titre
    {
        width : 20% ;
        border : none ;
        border-top : 5px solid #185359 ;
        margin : auto ;
        margin-bottom : 5vh ;
    }

    #texte
    {
        width : 100% ;
        text-align : center ;
        font-size : 1.5em ;
        font-weight : bolder ;
        color : #222;
    }

    form
    {
        width : 35% ;
        height : 70vh ;
        margin : auto ;
        display : flex ;
        flex-direction : column ;
        justify-content : space-around;
        margin-top : 5vh ;
        margin-bottom : 10vh ;
    }

    .champ
    {
        width : 100% ;
        padding-top : 5px ;
        padding-bottom : 5px ;
        font-size : 1.25em ;
        border : none ;
        border-bottom : 2px solid #888;
        outline : none ;
        text-align : center ; 
    }

    #demarrage-label
    {
        text-align : center ;
        margin-bottom : 25px ;
        font-weight : bolder ;
        font-size : 1.25em ;
        color : #333;
    }

    #projet_form_demarrage
    {
        display : flex ;
        justify-content : space-around ;
    }

    #projet_form_demarrage select
    {
        width : 100px ;
        font-size : 1.2em;
    }

    button
    {
        width : 45% ;
        align-self : center ;
        padding-top : 10px ;
        padding-bottom : 10px ;
        font-size : 1.25em ;
        background : #185359 ;
        color : white ;
        border-radius : 5px ;
    }

    #options
    {
        width : 100% ;
        display : flex ;
        justify-content : space-between ;
    }

    a
    {
        color : white ;
        text-decoration : none ;
    }

    *
    {
    margin : 0 ;
    padding : 0 ;
    }
{% endblock %}

{% block body %}
    <div id="header">
        <div id="logo"><img src="{{ asset('images/AE-PNG.png') }}" alt="Logo" width="100%" height='100%'></div>

        <div id="infos">
            <p id="infos-h">Informations</p>
            <p><span>Nom&Prenom</span> : {{ user.prenom }} {{ user.nom }}</p>
            <p><span>Fonction</span> : {{ user.poste }} </p>
            <p id='btn'><a href="/logout"><button id='decon'>Se deconncecter</button></a></p>
        </div>
    </div>

    <h1>Débuter un projet</h1>
    <hr id='hr-titre'>
    <p id='texte'> Veuillez remplir les champs suivants</p>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        <br>
        <div>
            <div id="demarrage-label">
                <label>Date de demarrage</label>
            </div>
            {{ form_row(form.demarrage) }}
        </div>
        <br>
        {{ form_row(form.delai) }}
        <br>
        {{ form_row(form.budget) }}
        <br>

        <div id='options'>
            <button type='submit'>Débuter</button>
            <button><a href="/projets">Annuler</a></button>
        </div>
    {{ form_end(form) }}
{% endblock %}